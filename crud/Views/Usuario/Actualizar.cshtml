@model Usuario

<H2>Crear usuario</H2>
<form asp-action="Actualizar" method="post">
    <div class="form-group">
        <label asp-for="Id_Usuario"></label>
        <input asp-for="Id_Usuario" readonly />
        <span asp-validation-for="Id_Usuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>    
    </div>
    <div class="form-group">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Actualizar" class="btn btn-warning">
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>